<launch4jConfig>
    <dontWrapJar>false</dontWrapJar>
    <headerType>gui</headerType>   <!-- use "console" for CLI apps -->
    <outfile>dist/IDSAnalytics/IDSAnalytics.exe</outfile>
    <jar>dist/IDSAnalytics/app.jar</jar>
    <errTitle>IDSAnalytics</errTitle>

    <!-- If MANIFEST has Main-Class, you can omit classPath/mainClass -->

    <jre>
        <path>jre</path>
        <minVersion>17</minVersion>
        <!-- JavaFX module path + modules -->
        <opt>--module-path</opt>
        <opt>javafx\lib</opt>
        <opt>--add-modules</opt>
        <opt>javafx.controls,javafx.fxml</opt>
        <!-- Tuning -->
        <opt>-Xms256m</opt>
        <opt>-Xmx1024m</opt>
        <opt>-Dfile.encoding=UTF-8</opt>
    </jre>

    <icon>dist/IDSAnalytics/app.ico</icon>

    <versionInfo>
        <fileVersion>1.0.0.0</fileVersion>
        <txtFileVersion>1.0.0</txtFileVersion>
        <productVersion>1.0.0.0</productVersion>
        <txtProductVersion>1.0.0</txtProductVersion>

        <fileDescription>IDS Analytics</fileDescription>
        <productName>IDSAnalytics</productName>
        <originalFilename>IDSAnalytics.exe</originalFilename>
        <internalName>IDSAnalytics</internalName>

        <!-- These two are the ones that trigger prompts if missing: -->
        <companyName>Laurent Software</companyName>
        <copyright>Â© 2025 Laurent Tandika</copyright>
    </versionInfo>
</launch4jConfig>