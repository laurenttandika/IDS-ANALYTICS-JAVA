<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.ids.PredefinedQueryDialogController"
    prefWidth="400" prefHeight="300"
    styleClass="dialog-pane">

    <center>
        <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="400">
            <Label text="ðŸ“Š Select Query Type" styleClass="dialog-header" />

            <ComboBox fx:id="queryTypeComboBox" prefWidth="Infinity" />

            <VBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                <Label text="Start Date:" />
                <DatePicker fx:id="startDatePicker" prefWidth="Infinity" VBox.vgrow="NEVER" />
            </VBox>

            <VBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                <Label text="End Date:" />
                <DatePicker fx:id="endDatePicker" prefWidth="Infinity" VBox.vgrow="NEVER" />
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" id="dialog_bottom">
            <Button text="Cancel" onAction="#onCancelClicked" />
            <Button text="Run Query" onAction="#onConfirmClicked" />
        </HBox>
    </bottom>
</BorderPane>