<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.PredefinedQueryDialogController"
    prefWidth="400" prefHeight="300"
    styleClass="dialog-pane">

    <center>
        <VBox spacing="15" alignment="CENTER_LEFT">
            <Label text="ðŸ“Š Select Query Type" styleClass="dialog-header" />

            <ComboBox fx:id="queryTypeComboBox" prefWidth="300" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Start Date:" />
                <DatePicker fx:id="startDatePicker" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="End Date:" />
                <DatePicker fx:id="endDatePicker" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#onCancelClicked" />
            <Button text="Run Query" onAction="#onConfirmClicked" />
        </HBox>
    </bottom>
</BorderPane>