                    vbarPolicy="AS_NEEDED">
                    <TextArea fx:id="queryArea" prefRowCount="8" VBox.vgrow="NEVER" />
                </ScrollPane>
                <TableView fx:id="resultTable" VBox.vgrow="ALWAYS" />
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10">
            <Label fx:id="statusLabel" text="Ready." HBox.hgrow="ALWAYS" />
